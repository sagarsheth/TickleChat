<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techpro.chat.ticklechat">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:name=".TechProApplication"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.registration.Login"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <provider android:authorities="com.facebook.app.FacebookContentProvider1592527504392182"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true" />

        <activity android:name=".activity.home.HomeActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.ChatScreen"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.registration.LoginActivity"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".fragments.TickleFriendFragment"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".activity.registration.PersonalProfileActivity"
            android:screenOrientation="portrait"></activity>


        <!--<activity android:name=".activity.registration.UserProfileActivity"
            android:screenOrientation="portrait"></activity>-->
    </application>

</manifest>
