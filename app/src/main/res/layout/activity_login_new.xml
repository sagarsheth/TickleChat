<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme2">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_signup"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@drawable/tickle_logo" />

    <EditText
        android:id="@+id/et_username"
        style="@style/style_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_button"
        android:hint="Phone Number"
        android:inputType="phone"
        android:maxLength="25"
         />

    <EditText
        android:id="@+id/et_pass"
        style="@style/style_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_username"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@drawable/selector_button"
        android:hint="Password"
        android:inputType="textPassword"
         />

    <!--<com.facebook.login.widget.LoginButton
        android:chatUserList="@+chatUserList/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginTop="30dp" />-->

    <!-- <com.google.android.gms.common.SignInButton
         android:chatUserList="@+chatUserList/btnGoogle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+chatUserList/btnSignup"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="@dimen/dimen_10" />-->

    <TextView
        android:id="@+id/tv_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="Not a member yet? SignUp now."
        android:textColor="#d4cdcd" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_separator"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_button"
        android:gravity="center"
        android:text="@string/signup"
        android:textColor="#fdfdfd"
      />

    <TextView
        android:id="@+id/tv_separator2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="------------------Or connect with------------------"
        android:textAllCaps="true"
        android:textColor="#d4cdcd" />

    <LinearLayout
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_separator2"
        android:layout_marginLeft="65dp"
        android:orientation="horizontal"
        android:weightSum="1">


        <LinearLayout
            android:id="@+id/btn_google_signin"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_5"
            android:background="@drawable/selector_button"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_10"
                android:src="@drawable/ic_gplus_circular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text="Google"
                android:textColor="#fdfdfd" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_fb_signin"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_5"
            android:background="@drawable/selector_button"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_10"
                android:src="@drawable/ic_b_fb_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text="Facebook"
                android:textColor="#fdfdfd"
                android:id="@+id/textView" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTermsAndConditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_20"
        android:ellipsize="middle"
        android:gravity="center"
        android:shadowColor="@color/textColorSecondary"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="@string/terms_policies"
        android:textColor="#fdfdfd"
        android:textSize="@dimen/txt_size_15"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/selector_button"
        android:gravity="center"
        android:text="Login"
        android:textColor="#fdfdfd"
        android:layout_below="@+id/et_pass"
        android:layout_alignStart="@+id/btn_signup"
        />

</RelativeLayout>
