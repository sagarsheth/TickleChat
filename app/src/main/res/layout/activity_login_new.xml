<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme4">


    <TextView
        android:id="@+id/tvTermsAndConditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_20"
        android:ellipsize="middle"
        android:gravity="center"
        android:shadowColor="@color/textColorSecondary"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="@string/terms_policies"
        android:textColor="#fdfdfd"
        android:textSize="@dimen/txt_size_15"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/rlMain"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tickle_logo" />

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shadow_2"
        android:elevation="20dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tlUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#efeaea"
            android:layout_marginTop="@dimen/dimen_10">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_username"
                style="@style/style_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:focusableInTouchMode="true"
                android:hint="User name"
                android:background="@android:color/transparent"
                android:inputType="phone"
                android:maxLength="25" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="Not a member yet? SignUp now."
            android:textColor="#d4cdcd" />

        <TextView
            android:id="@+id/tv_separator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="------------------Or connect with------------------"
            android:textAllCaps="true"
            android:textColor="#d4cdcd" />


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tlPassword"
            android:layout_alignStart="@+id/tlPassword"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_below="@+id/tlPassword"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:text="Login"
            android:textColor="#fdfdfd" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnLogin"
            android:layout_below="@+id/tv_separator"
            android:background="@drawable/selector_button"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:gravity="center"
            android:text="@string/signup"
            android:textColor="#fdfdfd" />

        <LinearLayout
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_separator2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/btn_google_signin"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_5"
                android:background="@drawable/selector_button"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="22dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:src="@drawable/ic_gplus_circular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text="Google"
                    android:textColor="#fdfdfd" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_fb_signin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_5"
                android:background="@drawable/selector_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:src="@drawable/ic_b_fb_logo" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:text="Facebook"
                    android:textColor="#fdfdfd" />

            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tlPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#ffffff"
            app:passwordToggleDrawable="@drawable/visible_selector"
            android:layout_below="@+id/tlUsername"
            android:layout_alignParentStart="true"
            android:textColorHint="#efeaea"
            android:layout_marginTop="@dimen/dimen_10">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_pass"
                style="@style/style_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/et_username"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:inputType="textPassword"
                />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
</RelativeLayout>