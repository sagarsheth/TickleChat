<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:techpro="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivAppLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:scaleType="fitCenter"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_centerHorizontal="true"

        android:src="@drawable/logo_circle"
        android:tint="@color/textColorSecondary_trans" />


    <LinearLayout
        android:id="@+id/signup_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_below="@+id/ivAppLogo"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle_Msg_Signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:shadowColor="@color/textColorTertiary"
            android:shadowDx="1"
            android:shadowDy="1"
            android:visibility="visible"
            android:shadowRadius="2"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_20"/>


        <TextView
            android:id="@+id/tvBottom_Msg_Signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:ellipsize="middle"
            android:gravity="center"
            android:visibility="visible"
            android:shadowColor="@color/textColorTertiary"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_25"/>

    </LinearLayout>


</RelativeLayout>