    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:editTextColor">@color/border_edit</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_white</item>
        <item name="android:listDivider">@color/divider_pink</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="FacebookLoginButton">
        <item name="android:textSize">13.5sp</item>
        <item name="android:background">@drawable/drawable_big_rounded_background</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
        <item name="android:padding">@dimen/dimen_10</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

